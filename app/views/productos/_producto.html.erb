<tr>
  <td><%= producto.nombre %></td>
  <td><%= producto.descripcion %></td>
  <td><%= producto.tipo.nombre %></td>
  <td><%= producto.precio %></td>
  <td>
  <div class="btn-group">
    <%= link_to '', producto, class: 'btn btn-success btn-sm glyphicon glyphicon-eye-open', :title => "Ver"'' %>
    <%= link_to '', edit_producto_path(producto), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', :title => "Editar" %>
    <%= link_to '',
                producto,
                method: :delete,
                class: 'btn btn-warning btn-sm glyphicon glyphicon-remove',
                data: { confirm: 'Esta seguro de eliminar este producto?' }, :title => "Eliminar" %>
  </div>
  </td>
</tr>