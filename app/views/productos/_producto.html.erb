<tr>
  <td><%= producto.nombre %></td>
  <td><%= producto.descripcion %></td>
  <td><%= producto.tipo.nombre %></td>
  <td><%= producto.precio %></td>
  <td>
    <%= link_to 'Edit', edit_producto_path(producto), class: 'btn btn-default btn-sm' %>
    <%= link_to 'Delete',
                producto,
                method: :delete,
                class: 'btn btn-danger btn-sm',
                data: { confirm: 'Esta seguro de eliminar este producto?' } %>
  </td>
</tr>