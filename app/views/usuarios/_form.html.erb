<%= form_for(usuario) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% usuario.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
       <div class="panel-body form-group">
        <p><%= f.label :ci %></p>
        <%= f.number_field :ci, class: 'form-control' %>
      </div>

      <div class="panel-body form-group">
        <p><%= f.label :nombres %></p>
        <%= f.text_field :nombres, class: 'form-control' %>
      </div>
       <div class="panel-body form-group">
        <p><%= f.label :apellidos %></p>
        <%= f.text_field :apellidos, class: 'form-control' %>
      </div>
      
      <div class="panel-body form-group">
    <p><%= f.label :empresa_id %></p>
    <%= f.select :empresa_id,  Empresa.all.collect {|t| [ t.nombre, t.id ] }, { include_blank: 'Seleccionar Empresa' }, class: 'form-control' %>
  </div>
  </br>
  
  </br>
    <div class="col-md-12">
      <div class="btn-group btn-group-justified">
        
        <div class="btn-group">
        <%= f.submit "Guardar Usuario", class: 'btn btn-info ' %>
        </div>
        <div class="btn-group">
        <%= link_to 'Cancelar', usuarios_path, class: 'btn btn-info'  %>
        </div>
      </div>
    </div>
<% end %>






  
