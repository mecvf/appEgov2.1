
<%= form_for(bebida) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% bebida.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>

      <div class="panel-body form-group">
        <p><%= f.label :nombre %></p>
        <%= f.text_field :nombre, class: 'form-control' %>
      </div>
      <div class="panel-body form-group">
        <p><%= f.label :tipo %></p>
         <%= f.select :tipo, tipo_bebidas, {}, class: 'form-control' %>
      </div>
      
  </br>
  <div class="panel-body form-group">
    <p><%= f.label :precio %></p>
    <%= f.number_field :precio, min: 0, class: 'form-control' %>
  </div>
  </br>
    <div class="panel-footer text-right">
      <%= link_to 'Cancel', productos_path, class: 'btn btn-default btn-sm'  %>
      <%= f.submit "Guardar Bebida", class: 'btn btn-default btn-sm' %>
    </div>
  </div>
<% end %>