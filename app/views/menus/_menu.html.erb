<tr>
  <td><%= menu.fecha %></td>
  
  <td>
  <div class="btn-group">
    <%= link_to '', menu, class: 'btn btn-success btn-sm glyphicon glyphicon-eye-open', :title => "Ver"'' %>
    <%if Time.now.to_date <= menu.fecha.to_date %>
    
    <%= link_to '', edit_menu_path(menu), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', :title => "Editar" %>
    <%= link_to '',
                menu,
                method: :delete,
                class: 'btn btn-warning btn-sm glyphicon glyphicon-remove',
                data: { confirm: 'Esta seguro de eliminar este producto?' }, :title => "Eliminar" %>
    <%end%>
  </div>
  </td>
</tr>