<%= form_for(menu) do |f| %>
<div class="panel panel-default">
    <div class="panel-body">
        <% menu.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>



  <div class="panel-body form-group">
    <p><%= f.label :fecha %></p>
    <%= f.date_select :fecha, class: 'form-control' %>
  </div>
  </br>
  <div class="panel-body form-group">
    <p><%= f.label :producto_id %></p>
    <%= f.select :producto_id,  Producto.all.collect {|t| [ t.nombre, t.id ] }, { include_blank: 'Seleccionar el Producto' }, class: 'form-control' %>
  </div>
  
  </br>
  <div class="col-md-12">
      <div class="btn-group btn-group-justified">
        
        <div class="btn-group">
        <%= f.submit "Guardar Menu", class: 'btn btn-info ' %>
        </div>
        <div class="btn-group">
        <%= link_to 'Cancelar', productos_path, class: 'btn btn-info'  %>
        </div>
      </div>
    </div>
  </div>
<% end %>
